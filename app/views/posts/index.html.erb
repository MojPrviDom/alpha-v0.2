<style type="text/css">
  .post_outer {
    margin-top: 2em;
  }

  .post_inner{
    margin-bottom: 3em;
    border-bottom: solid 1px #6D6D6D;
    padding-bottom: 2em;
  }

  .post_image  {
    width: 33%;
    float: left;

  }

  .post_image img {
    width: 100%;
    height: auto;
  }

  .post_title {
    font-weight: bold;
    margin-bottom: 1.2em;
  }
  .post_content {
    padding-left: 1.5%;
    text-align: left;
    width: 98.5%
  }

  .post_content b {
    font-family: "Bitter", sans-serif;
    font-weight: bold;
    color:#2E2E2E; 
  }
  .post_title { 
    width: 100%;
    text-align: left;
    font-size: 1.2em;
    font-family: "Bitter", sans-serif;
    font-weight: bold;
    color:#2E2E2E; 
  }

  .post_title_content {
    float: right;
    width: 65%;
  }
  .clear {
    clear: both;
  }
  .show_more {
    float: right;
  }


  .show_more a:link {
    color: black;
  }

  .show_more a:visited {
    color: black;
  }

  .show_more a:hover {
    color: orange;
  }


  @media screen and (max-width:900px) {
    .post_image, .post_title_content {
      float: none;
    }

    .post_title_content {
      width: 100%;
      text-align: justify;
    }

    .post_image {
      margin: 0 auto 1em auto;
      width: 80%;

    }


  }
</style>


<h1>Projekti i Novosti</h1>


  <div class="post_outer">
    <% @posts.each do |post| %>
      <div class="post_inner">
        <div class="post_image"><%= image_tag post.photo.url %></div>
        <div class="post_title_content">
          <div class="post_title"><%= post.title %></div>
          <div class="post_content"><%= simple_format truncate(post.body, length: 400, escape: false) %> <br>
            <!--<%= link_to 'Pročitaj cijelu obavijest.', post %>--></div>
        </div>

        <div class="clear"> </div>
        <div class="show_more"><%= link_to '... Pročitaj cijelu obavijest', post %></div>
        <div class="clear"> </div>
        
      </div>
    <% end %>
  </div>


<br>
<div class="apple_pagination">

    <%= will_paginate @posts %>
</div>
