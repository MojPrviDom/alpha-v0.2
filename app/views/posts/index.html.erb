<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.photo.url %></td>
        <td><%= post.title %></td>
        <td><%= truncate(strip_tags(post.body), length: 100)  %> <br>
          <%= link_to 'Pročitaj cijelu obavijest.', post %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="apple_pagination">

    <%= will_paginate @posts %>
</div>
